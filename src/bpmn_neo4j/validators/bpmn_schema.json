{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BPMN Schema",
  "type": "object",
  "required": ["result"],
  "properties": {
    "result": {
      "type": "object",
      "required": ["flowElements"],
      "properties": {
        "flowElements": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "type"],
            "properties": {
              "id": { "type": "string" },
              "type": { "type": "string" },
              "name": { "type": "string" },
              "source": { "type": ["string", "null"] },
              "target": { "type": ["string", "null"] },
              "subType": { "type": ["string", "null"] },
              "properties": {
                "type": "object",
                "properties": {
                  "pool_id": { "type": ["string", "null"] },
                  "lane_id": { "type": ["string", "null"] }
                }
              }
            }
          }
        },
        "messageFlows": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "source": { "type": "string" },
              "target": { "type": "string" },
              "name": { "type": "string" }
            }
          }
        },
        "pools": { "type": "array" },
        "lanes": { "type": "array" }
      }
    }
  }
}
